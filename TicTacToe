 package tictactoe;

import java.awt.Font;
import javax.swing.JButton;
import javax.swing.JOptionPane;

public class Frame extends javax.swing.JFrame {

    // used to identify each player turn
    private String turn = "";
    
    // increase count by +1 (total 9) to game end
    private int count = 0;

    // Counter for X, O and Draws
    static int wins_x = 0;
    static int wins_o = 0;
    static int draw = 0;

    public Frame() {
        initComponents();
        this.setLocationRelativeTo(null);
        this.setTitle("Tic-Tac-Toe By Sultan & Ali");
    }

    private void changeTurn(JButton bn) {
        // let player Select first
        if (turn == "") {
            JOptionPane.showMessageDialog(null, "Please select either 'X' or 'O' to play!");
            return;
        }
        if (bn.getText() == "") {   //Check if button is empty text
            if (count < 9) {    //Check if all boxes are used (9 in total)
                bn.setFont(new Font("Arial", Font.PLAIN, 50));
                bn.setText(turn);
                count++;
                if ("X".equals(turn)) { //If X, change turn to O
                    turn = "O";

                } else {
                    turn = "X"; //Else: to X
                }
                Notice.setText(":: Player '" + turn + "' Turn ::");

            }

            if (checkisWinner("X") != "" || checkisWinner("O") != "") {
                if (checkisWinner("X") != "") {

                    Notice.setText(":: Game winner is: 'X' ::");
                    JOptionPane.showMessageDialog(null, "Game winner is: 'X'");
                    wins_x++;
                } else if (checkisWinner("O") != "") {
                    Notice.setText(":: Game winner is: 'O' ::");
                    JOptionPane.showMessageDialog(null, "Game winner is: 'O'");
                    wins_o++;
                }
                resetGame();
            }

            if (count >= 9) {
                draw++;
                Notice.setText(":: Game result was Tie! ::");
                JOptionPane.showMessageDialog(null, "Game result was Tie!");
                resetGame();
            }

        }
    }

    private String checkisWinner(String value) {
        if (BU1.getText() == value && BU2.getText() == value && BU3.getText() == value) {
            return value;
        } else if (BU4.getText() == value && BU5.getText() == value && BU6.getText() == value) {
            return value;
        } else if (BU7.getText() == value && BU8.getText() == value && BU9.getText() == value) {
            return value;
        } else if (BU1.getText() == value && BU4.getText() == value && BU7.getText() == value) {
            return value;
        } else if (BU2.getText() == value && BU5.getText() == value && BU8.getText() == value) {
            return value;
        } else if (BU3.getText() == value && BU6.getText() == value && BU9.getText() == value) {
            return value;
        } else if (BU1.getText() == value && BU5.getText() == value && BU9.getText() == value) {
            return value;
        } else if (BU3.getText() == value && BU5.getText() == value && BU7.getText() == value) {
            return value;
        } else {
            return "";
        }

    }

    private void resetGame() {
        BU1.setText("");
        BU2.setText("");
        BU3.setText("");
        BU4.setText("");
        BU5.setText("");
        BU6.setText("");
        BU7.setText("");
        BU8.setText("");
        BU9.setText("");

        String turn = "";
        count = 0;

        Score_X.setText(Integer.toString(wins_x));
        Score_O.setText(Integer.toString(wins_o));
        Score_T.setText(Integer.toString(draw));

        PlayAsX.setSelected(false);
        PlayAsO.setSelected(false);
    }

