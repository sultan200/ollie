    private void PlayAsXActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:

        turn = "X";
        Notice.setText("Player selected: " + turn);
        if (PlayAsO.isSelected() != false) {
            PlayAsO.setSelected(false);
        }
    }                                       

    private void PlayAsOActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        turn = "O";
        Notice.setText("Player selected: " + turn);
        if (PlayAsX.isSelected() != false) {
            PlayAsX.setSelected(false);
        }
    }                                       

    private void RESETGAMEActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        resetGame();
        Notice.setText("Game was reseted!");
    }                                         

    private void Score_XActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
    }                                       

    private void Score_OActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
    }                                       

    private void RESETSCOREActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        wins_x = 0;
        wins_o = 0;
        draw = 0;
        Score_X.setText(Integer.toString(wins_x));
        Score_O.setText(Integer.toString(wins_o));
        Score_T.setText(Integer.toString(draw));
        Notice.setText("Score Board was reseted!");
    }                                          

    private void NoticeActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
    }                                      

